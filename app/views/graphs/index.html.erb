<% for graph in @graphs %>
	<%= image_tag graph.chart_uri %><br/>
	<%= link_to 'Load', graph %><br/>
	<hr>
<% end %>

<%
=begin %>
<h1>Listing graphs</h1>

<table>
  <tr>
    <th>Query template</th>
    <th>Lower bound</th>
    <th>Upper bound</th>
    <th>Step</th>
    <th>Engine</th>
  </tr>

<% for graph in @graphs %>
  <tr>
    <td><%=h graph.query_template %></td>
    <td><%=h graph.lower_bound %></td>
    <td><%=h graph.upper_bound %></td>
    <td><%=h graph.step %></td>
    <td><%=h graph.engine %></td>
    <td><%= link_to 'Show', graph %></td>
    <td><%= link_to 'Edit', edit_graph_path(graph) %></td>
    <td><%= link_to 'Destroy', graph, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New graph', new_graph_path %>

